<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#004b8e"
    android:gravity="bottom"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/feedtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUNYIT Event List" android:layout_centerHorizontal="true" android:textSize="25dp"/>

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/feedtitle" android:layout_above="@+id/eventbut"/>

    <Button
        android:id="@+id/eventbut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reflv" android:layout_alignParentBottom="true"/>

</RelativeLayout>